" basics
set encoding=utf8
set nowrap
set laststatus=2
set cursorline

set number relativenumber
set mouse=a
set clipboard=unnamedplus
set hidden

let g:loaded_matchparen=1

" searching
set incsearch
set hlsearch
set ignorecase
set smartcase

" tabs and indent
set smarttab
set shiftwidth=4
set tabstop=4
set autoindent
set smartindent
