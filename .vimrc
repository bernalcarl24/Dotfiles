" basics
set encoding=utf8
set ttyfast
set nowrap
set laststatus=2
set number
set cursorline
set mouse=a

let g:loaded_matchparen=1

" searching
set incsearch
set hlsearch
set ignorecase
set smartcase

" tabs and indent
set expandtab
set smarttab

set shiftwidth=4
set tabstop=4

set autoindent
set smartindent

